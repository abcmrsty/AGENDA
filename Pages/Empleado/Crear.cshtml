@page
@model AGENDA.Pages.Empleado.Crear
@{
    ViewData["Title"] = "Crear";
}


<div class="row">
    <div class = "col-md8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Nuevo Empleado</h2>

        @if (Model.ErrorMessage.Length > 0){
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" dara-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }

        <form method="post">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Id</label>
                <div class="col-sm-8">
                    <input class="form-control-plain" asp-for="Id"/>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Cedula</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Cedula"/>
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Nombres</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nombres"/>
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Apellidos</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Apellidos"/>
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Fecha_de_Nacimiento</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Fecha_de_Nacimiento"/>
                    <span asp-validation-for="Fecha_de_Nacimiento" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Departamento</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Departamento"/>
                    <span asp-validation-for="Departamento" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Municipio</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Municipio"/>
                    <span asp-validation-for="Municipio" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Dirección</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Dirección"/>
                    <span asp-validation-for="Dirección" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Teléfono</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Teléfono"/>
                    <span asp-validation-for="Teléfono" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Celular</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Celular"/>
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>

                        <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Correo</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Correo"/>
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Fecha_de_Ingreso</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Fecha_de_Ingreso"/>
                    <span asp-validation-for="Fecha_de_Ingreso" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Profesión</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Profesión"></textarea>
                    <span asp-validation-for="Profesión" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Puesto</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Puesto"/>
                    <span asp-validation-for="Puesto" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Salario</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Salario"/>
                    <span asp-validation-for="Salario" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="sumbit" class="btn btn-primary">Crear</button>
                </div>

                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Empleado/Index" role="button">Cancelar</a>

                </div>      
            </div>

        </form>   
    </div> 
</div>