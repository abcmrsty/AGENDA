@page
@model AGENDA.Pages.Clientes.Crear
@{
    ViewData["Title"] = "Crear";
}


<div class="row">
    <div class = "col-md8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Nuevo Cliente</h2>

        @if (Model.ErrorMessage.Length > 0){
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" dara-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }

        <form method="post">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">IdContacto</label>
                <div class="col-sm-8">
                    <input class="form-control-plain" asp-for="IdContacto"/>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Nombres*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nombres"/>
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Apellidos*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Apellidos"/>
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Correo</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Corre"/>
                    <span asp-validation-for="Corre" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Telefono</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Telefono"/>
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Direccion</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Direccion"/>
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Compa√±ia</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Compania"/>
                    <span asp-validation-for="Compania" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Notas</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Notas"></textarea>
                    <span asp-validation-for="Notas" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Fecha_reg</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Fecha_reg"/>
                    <span asp-validation-for="Fecha_reg" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="sumbit" class="btn btn-primary">Crear</button>
                </div>

                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Clientes/Index" role="button">Cancelar</a>

                </div>      
            </div>


        </form>   
    </div> 
</div>